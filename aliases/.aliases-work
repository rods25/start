############################################################
##  SVN
############################################################
alias svn-up='.svn && echo "\n"; find . -mindepth 1 \-maxdepth 15 -name "*.svn" -type d -exec svn up {}/.. \;'
alias svn-st='.svn && echo "\n"; find . -mindepth 1 \-maxdepth 15 -name "*.svn" -type d -exec svn st {}/.. \;'
alias svn-clup='.svn && echo "\n"; find . -mindepth 1 \-maxdepth 15 -name "*.svn" -type d -exec svn clean up {}/.. \;'

alias .svn-up='echo "\n"; find . -mindepth 1 \-maxdepth 15 -name "*.svn" -type d -exec svn up {}/.. \;'
alias .svn-st='echo "\n"; find . -mindepth 1 \-maxdepth 15 -name "*.svn" -type d -exec svn st {}/.. \;'
alias .svn-clup='echo "\n"; find . -mindepth 1 \-maxdepth 15 -name "*.svn" -type d -exec svn clean up {}/.. \;'

alias .svn-clean="svn status | grep '^?' | awk '{print $2}' | xargs rm -rf"

